{
  "private": true,
  "name": "analysis",
  "version": "0.0.0",
  "description": "Monorepo for libraries that work on scientific analysis data",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-permeability": "npm run tsc-clean && npm run tsc && cheminfo-build --out-name 'permeability-analysis' --entry packages/permeability-analysis/lib-esm/index.js --root PermeabilityAnalysis",
    "check-types": "tsc --noEmit",
    "dev": "npm run tsc-watch",
    "eslint": "eslint .",
    "eslint-fix": "npm run eslint -- --fix",
    "prettier": "prettier --check .",
    "prettier-write": "prettier --write .",
    "test": "npm run tsc && npm run test-only && npm run eslint && npm run prettier",
    "test-only": "jest",
    "tsc": "tsc --build",
    "tsc-clean": "tsc --build --clean",
    "tsc-watch": "tsc --build --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/analysis.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/analysis/issues"
  },
  "homepage": "https://github.com/cheminfo/analysis#readme",
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "cheminfo-build": "^1.2.0",
    "eslint": "^8.22.0",
    "eslint-config-cheminfo-typescript": "^13.0.0",
    "jest": "^29.7.0",
    "jest-matcher-deep-close-to": "^3.0.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
